{% if answer is not defined %}
    {% set id = comment.id %}
{% else %}
    {% set id = answer.id %}
{% endif %}

<form method="POST" action="{{ path('app_comment_delete', {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment ?\nThis action is irreversible.');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button>{{ button_label|default('Delete') }}</button>
</form>