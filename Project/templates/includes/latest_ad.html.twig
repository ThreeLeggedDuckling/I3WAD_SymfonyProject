<div class="d-flex justify-content-around">
    {% for advert in latest %}

        <div class="card w-25">
            <div class="card-header d-flex justify-content-between flex-wrap">
                <h5>{{ advert.author.username }}</h5>
                <p class="align-self-end">{{ timeAgo(advert.publishDate).text }}</p>
            </div>

            <div class="card-body d-flex flex-column justify-content-between">
                <p class="card-text">{{ advert.content|wrap(75) }}</p>
                {# voir comment mieux faire affichage tag #}
                <div class="d-flex justify-content-between align-items-end flex-wrap">
                    {% for tag in advert.tags %}
                        <p>{{ tag.name }}</p>
                    {% endfor %}
                </div>
            </div>

            <div class='card-footer d-flex justify-content-end'>
                {{ advert.comments|length }} comments
            </div>
        </div>
        
    {% endfor %}
</div>
