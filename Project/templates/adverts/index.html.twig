{% extends 'base.html.twig' %}

{% block title %}Hello AdvertsController!{% endblock %}

{% block body %}

{# include cette partie ? #}
<h1>Greetings adventurers and storytellers!</h1>
<h2>We were waiting for you</h2>

    <div>
        <h3>Have a look at the talks of the town</h3>

        {% for advert in latest %}

            <div class='advert' onclick='window.location="{{ path ('app_adverts_detail', {id:advert.id}) }}"'>
                <p>{{ advert.author.username }} ({{ timeAgo(advert.publishDate).text }})</p>
                <p>Level : {{ advert.level }}</p>
                {% if advert.modality %}
                    <p>Modality : {{ advert.modality }}</p>
                {% endif %}
                {% if advert.area %}
                    <p>Around : {{ advert.area }}</p>
                {% endif %}
                <p>{{ advert.content }}</p>  {# limite taille texte #}
                <p>{{ advert.comments|length }} comments</p>
            </div>

            <hr>
            
        {% endfor %}
    </div>

{% if app.user %}

{% else %}

    <div>
        <p>As a passing guest, you may only hear about the latest news.</p>
        <p>Want to see more ? <a href="{{ path ('app_login') }}">Speak friend</a> or <a href="{{ path ('app_register') }}">join us</a>.</p>
    </div>

{% endif %}

{% endblock %}